<h2>
  <%= @event.title %>
</h2>

<div class="event-details">
  <div class="row">
  <p><%= image_tag @event.image_url, class: "event-image" %></p>

  <div>
    <p>Budget: $<%= @event.budget %></p>
    <p>Date: <%= @event.date %></p>
    <p> Details: <%= @event.details %></p>
  </div>
</div>
</div>

<div class="row">
<div class="event-guests col-md-6">
  <h3>Guests</h3>
  <table class="table">
    <thead>
      <th>Name</th>
      <th>RSVP?</th>
      <th>Attending?</th>
      <th></th>
    </thead>
    <tbody>
      <%= render partial: 'guests/guest', collection: @event.guests, as: :guest, locals: {event: @event} %>
    </tbody>
  </table>
</div>

<div class="event-tasks col-md-6">
<h3>Tasks</h3>
<hr>
<%= render partial: 'tasks/task', collection: @event.tasks, as: :task %>
</div>
</div>
