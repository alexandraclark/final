<h1>Sign In</h1>

<% if flash[:notice] %>
<br>
<div class="alert alert-success alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <%= flash[:notice] %>
</div>
<% end %>

<%= form_tag "/sessions" do  %>

  <p><%= label_tag :email %> <br> <%= text_field_tag :email, '', autofocus: true, size: 40, required: true %></p>
  <p><%= label_tag :password %> <br> <%= password_field_tag :password, '', size: 40, required: true %></p>
  <p><%= submit_tag "Log In", :class => "btn"  %></p>

<% end %>
